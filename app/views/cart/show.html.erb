<h1>Shopping Cart</h1>

<% if @cart_items.empty? %>
  <p>Your cart is empty.</p>
  <%= link_to 'Continue Shopping', products_path, class: 'button' %>
<% else %>
  <table border="1" cellpadding="10">
    <thead>
      <tr>
        <th>Product</th>
        <th>Brand</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Subtotal</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |item| %>
        <tr>
          <td><%= item[:product].name %></td>
          <td><%= item[:product].brand %></td>
          <td>$<%= number_with_precision(item[:product].current_price, precision: 2) %></td>
          <td>
            <%= form_with url: update_cart_path(item[:product].id), method: :patch, local: true do |f| %>
              <%= number_field_tag :quantity, item[:quantity], min: 1, max: item[:product].stock_quantity %>
              <%= submit_tag 'Update' %>
            <% end %>
          </td>
          <td>$<%= number_with_precision(item[:product].current_price * item[:quantity], precision: 2) %></td>
          <td>
            <%= button_to 'Remove', remove_from_cart_path(item[:product].id), method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <h2>Total: $<%= number_with_precision(@total, precision: 2) %></h2>
  
  <div style="margin-top: 20px;">
    <%= link_to 'Continue Shopping', products_path, style: 'padding: 10px 20px; margin-right: 10px;' %>
    <%= link_to 'Proceed to Checkout', checkout_path, style: 'padding: 10px 20px; background-color: #28a745; color: white; text-decoration: none;' %>
  </div>
<% end %>