<div class="col-md-3">
  <div class="card h-100 shadow-sm">

    <!-- IMAGE -->
    <% if product.image.attached? %>
      <%= image_tag product.image, class: "card-img-top", style: "height:200px; object-fit:cover;" %>
    <% else %>
      <%= raw("
        <svg width='100%' height='200' xmlns='http://www.w3.org/2000/svg'>
          <rect width='100%' height='200' fill='#e5e5e5'/>
          <text x='50%' y='50%' font-size='22' fill='#555'
                text-anchor='middle' alignment-baseline='middle'>
            No Image
          </text>
        </svg>
      ") %>
    <% end %>

    <!-- BODY -->
    <div class="card-body">
      <h5 class="card-title"><%= link_to product.name, product %></h5>
      <p class="card-text"><%= product.description %></p>

      <p class="fw-bold"><%= number_to_currency(product.price) %></p>

      <%= button_to "Add to Cart",
            add_cart_path(product),
            method: :post,
            class: "btn btn-primary w-100" %>
    </div>

  </div>
</div>
