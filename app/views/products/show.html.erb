<h1 class="mb-4"><%= @product.name %></h1>

<div class="row">
  <div class="col-md-6 mb-3">
    <% if @product.image.attached? %>
      <%= image_tag @product.image.variant(resize_to_limit: [600, 600]),
                    class: "img-fluid mb-3" %>
    <% end %>
  </div>

  <div class="col-md-6">
    <p class="text-muted">
      <strong>Category:</strong>
      <%= @product.category&.name %>
    </p>

    <p><%= simple_format(@product.description) %></p>

    <p class="h4 mt-3">
      <%= number_to_currency(@product.current_price) %>
    </p>

    <%= button_to "Add to Cart",
                  add_cart_path(@product),
                  method: :post,
                  class: "btn btn-primary mt-3" %>
  </div>
</div>

<hr>

<p>
  <%= link_to "Back to Products", products_path, class: "btn btn-link" %>
</p>
